ScreenManager:
    Screen:
        name: 'enter'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'username:'
                TextInput:
                    id: username
                    text: 'admin'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'password:'
                TextInput:
                    id: password
                    password: True
                    text: 'Admin123'
            BoxLayout:
                orientation: 'vertical'
                id: verify
            Button:
                text: 'Log In'
                size_hint: (None, None)
                size: (self.texture_size[0] + 64, self.texture_size[1] + 64)
                on_press:
                    app.connect()
                    app.verify()
                    root.transition.direction = 'left'
                    #root.current = 'location'
    Screen:
        name: 'location'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                id: results
            Button:
                text: 'Load Locations'
                on_press: app.load_locations()
            Button:
                text: 'Advance'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'selection'
    Screen:
        name: 'selection'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'OpenMRS ID:'
                TextInput:
                    id: openmrs_id
            BoxLayout:
                orientation: 'vertical'
                id: patient
            Button:
                text: 'Load Patient'
                on_press: app.load_patient()
